{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true
    },
    "include": [
        "app.ts",
        "functions/*.ts",
        "routes/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}